{
  "name": "@smartimpact-it/locations-map",
  "version": "1.1.4",
  "description": "A library to display locations on a map.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "module:src": "src/index.js",
  "umd:main": "dist/umd/index.js",
  "types": "dist/types/index.d.js",
  "sideEffects": false,
  "authors": [
    {
      "name": "SmartImpact IT",
      "email": "dev@smartimpact.it",
      "url": "https://smartimpact.fr"
    },
    {
      "name": "Bogdan Barbu",
      "email": "bbarbu@smartimpact.fr"
    }
  ],
  "license": "GPL-3",
  "keywords": [
    "map",
    "stores",
    "locations",
    "google maps",
    "leaflet"
  ],
  "scripts": {
    "test": "jest",
    "watch": "webpack --progress --watch --color",
    "format": "prettier --write \"src/**/**.{js,ts}\" \"**/*.md\"",
    "format:check": "prettier --list-different \"src/**/**.{js,ts}\" \"**/*.md\"",
    "pretest": "npm run build",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:types",
    "build:cjs": "node tools/cleanup cjs && tsc -p config/tsconfig.cjs.json && babel ./dist/cjs -d ./dist/cjs",
    "build:esm": "node tools/cleanup esm && tsc -p config/tsconfig.esm.json && babel ./dist/esm -d ./dist/esm --config-file ./config/babel.config.esm.js",
    "build:umd": "node tools/cleanup umd && webpack --config config/webpack.config.js",
    "build:types": "node tools/cleanup types && tsc -p config/tsconfig.types.json",
    "clean": "node tools/cleanup",
    "package": "npm run build && npm pack",
    "addscope": "node tools/packagejson name @smartimpact-it/locations-map",
    "postversion": "git push --follow-tags",
    "test-locally": "local-package-publisher -p"
  },
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "lib": "dist"
  },
  "files": [
    "dist",
    "src",
    "utils"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/siit-dev/locations-map.git"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.13.2",
    "@googlemaps/markerclustererplus": "^1.2.10",
    "@tarekraafat/autocomplete.js": "^9.1.1",
    "@types/leaflet.markercluster": "^1.4.6",
    "@types/google.maps": "^3.47.2",
    "@types/leaflet": "^1.7.8",
    "@types/list.js": "^2.3.1",
    "@types/lodash": "^4.14.178",
    "@types/markerclustererplus": "^2.1.33",
    "jquery": "^3.6.0",
    "leaflet": "^1.7.1",
    "leaflet.markercluster": "^1.5.3",
    "list.js": "^2.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.10",
    "@babel/helpers": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.16.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-async-to-generator": "^7.16.8",
    "@babel/plugin-transform-react-jsx": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.16.9",
    "autoprefixer": "^10.4.2",
    "babel-jest": "^27.4.6",
    "babel-loader": "^8.2.3",
    "babel-plugin-lodash": "^3.3.4",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "file-loader": "^6.2.0",
    "jest": "^27.4.7",
    "local-package-publisher": "^1.0.4",
    "mini-css-extract-plugin": "^2.5.2",
    "postcss": "^8.4.5",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.5.1",
    "sass": "^1.49.0",
    "sass-loader": "^12.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-notifier": "^1.15.0"
  },
  "bugs": {
    "url": "https://github.com/siit-dev/locations-map/issues"
  },
  "homepage": "https://github.com/siit-dev/locations-map",
  "jest": {
    "testEnvironment": "jsdom"
  }
}
